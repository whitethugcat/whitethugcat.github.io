<!--구매자페이지 상세 페이지-->

<body>
    
<div class="background">
    
<!--***헤더부분***-->
    <div class="header">
        <div class="my_page">
            <% if user_signed_in? %>
                <%= current_user.email %> 님 안녕하세요!
                <a href="/users/sign_out" data-method="delete">로그아웃</a>
               
            <% else %>
                <a href="/users/sign_in">로그인</a>
            <% end %>
        </div>
        <div class="logo">
            화(花)요일
        </div>
        <div class="page_name">
            구매자 페이지
        </div>
        <div class="main_page">
            <!--메인페이지 링크 나중에 삽입-->
            메인페이지로
        </div>
        <div class="login_logout">
            <% if user_signed_in? %>
                <a href="/users/sign_out" data-method="delete">로그아웃</a>
            <% else %>
                <a href="/users/sign_in">로그인/회원가입</a>
            <% end %>    
        </div>
    
<!--***디테일 헤더***-->

    <div class="detail_header">
        <div class="detail_header_back">
            <a href="/blooming_days/index"><img class="detail_header_back" src="<%= asset_path("back_button.png") %>"></a>
        </div>
        <div class="detail_header_storename">
            <%= @seller.name %>
        </div>
    </div>
    <div class="detail_header_menu">
        <div class="detail_header_menu_items">
            세부정보
        </div>
        <div class="detail_header_menu_items">
            판매리스트
        </div>
        <div class="detail_header_menu_items">
            리뷰
        </div>
    </div>
</div>

<!--***사진***-->

<div class="container">
<div class="detail_content">


<!--***세부정보***-->

<div class="side-crop">
    <img class="detail_photo" src="<%= url_for(@seller.img) %>">
</div>

<div class="store_detail">

    <div class="detail_section">
        <div class="detail_section_icon">
            <img class="detail_section_icon_img" src="<%= asset_path("section_flower.png") %>">
        </div>
        <div class="details_section_name">
            세부정보
        </div>
    </div>

</div>
<!--***판매리스트***-->

<!--***리뷰***-->


</div>


</div>
</div>
</body>    
</html>
